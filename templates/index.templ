templ Header() {
	<header class="bg-white shadow-sm sticky top-0 z-50">
		<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex justify-between items-center py-6">
				<div class="flex items-center">
					<h1 class="text-2xl font-bold text-gray-900">Holger M. Hahn</h1>
					<span class="ml-3 text-sm text-gray-600">Digital Assets Solutions Architect</span>
				</div>
				<div class="hidden md:flex space-x-8">
					<a href="#about" class="text-gray-600 hover:text-blue-600 transition">About</a>
					<a href="#services" class="text-gray-600 hover:text-blue-600 transition">Services</a>
					<a href="#experience" class="text-gray-600 hover:text-blue-600 transition">Experience</a>
					<a href="#contact" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Contact</a>
				</div>
			</div>
		</nav>
	</header>
}

templ Hero() {
	<section class="bg-gradient-to-br from-blue-900 via-blue-800 to-indigo-900 text-white py-20">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
				<div>
					<h1 class="text-4xl lg:text-6xl font-bold leading-tight mb-6">
						Secure Digital Asset Solutions for 
						<span class="text-yellow-400">Financial Institutions</span>
					</h1>
					<p class="text-xl text-blue-100 mb-8 leading-relaxed">
						Transform fragmented workflows into compliant, automated platforms. 
						15+ years of expertise in regulated digital-asset and banking environments.
					</p>
					<div class="flex flex-col sm:flex-row gap-4">
						<a href="#contact" class="bg-yellow-400 text-blue-900 px-8 py-4 rounded-lg font-semibold hover:bg-yellow-300 transition">
							Start Your Project
						</a>
						<a href="#services" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-900 transition">
							View Services
						</a>
					</div>
					<div class="mt-12 flex items-center space-x-8">
						<div class="text-center">
							<div class="text-3xl font-bold">15+</div>
							<div class="text-blue-200">Years Experience</div>
						</div>
						<div class="text-center">
							<div class="text-3xl font-bold">5</div>
							<div class="text-blue-200">Years in Digital Assets</div>
						</div>
						<div class="text-center">
							<div class="text-3xl font-bold">100%</div>
							<div class="text-blue-200">Regulatory Compliant</div>
						</div>
					</div>
				</div>
				<div class="mt-12 lg:mt-0">
					<div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8">
						<h3 class="text-xl font-semibold mb-6">Trusted by Leading Organizations</h3>
						<div class="space-y-4">
							<div class="flex items-center space-x-3">
								<div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
								<span>Stuttgart Stock Exchange Group</span>
							</div>
							<div class="flex items-center space-x-3">
								<div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
								<span>Hauck Aufhäuser Digital Custody</span>
